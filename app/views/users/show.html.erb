<h1><%= @user.username %></h1>

<h2>Secrets</h2>
<ul class="users_list">
  <% @user.received_secrets.each do |secret| %>
    <li><%= secret.title %>
    <form action="<%= secret_url(secret) %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="hidden" name="secret[id]" value="<%= secret.id %>">
      <input type="submit" value="DELETE"%>
    </form>
  </li>
    <ul>
      <% secret.tags.each do |tag| %>
        <li><%= tag.title %></li>
      <% end %>
    </ul>
  <% end %>
</ul>

<%= render 'secrets/form.html.erb', user: @user %>
<br>
<%= link_to "Back to Users", users_url %>
